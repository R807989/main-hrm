pipeline {
    agent any

    environment {
        // Define environment variables if needed
        DOCKER_IMAGE = 'node:14'  // Replace with your desired Node.js version
    }

    stages {
        stage('Checkout') {
            steps {
            git 'https://github.com/R807989/main-hrm.git'
            }
        }



stage('Build') {
            steps {
 dir('hrms') {
                script {
                    // Install dependencies and build AngularJS project
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
}

        }
}
