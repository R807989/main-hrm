pipeline {
    agent any


    stages {
        stage('Checkout') {
            steps {
            git 'https://github.com/R807989/main-hrm.git'
            }
        }



stage('Build') {
            steps {
 dir('hrms') {
                script {
                    // Install dependencies and build AngularJS project
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
}
stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image for AngularJS app
                    dir('hrms') {
                        def dockerImage = docker.build('hrms-main', '-f Dockerfile .')
                }
                        dockerImage.save("hrms-image.tar")
                    }
                }
            }
        }




      }

