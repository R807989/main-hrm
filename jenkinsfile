pipeline {
    agent any

    stages {
        stage("Integration Code") {
            steps {
                node {
                    git 'https://github.com/R807989/main-hrm.git'
                }
            }
        }

        stage("Install Dependencies") {
            steps {
                node {
                    // Use the NodeJS tool configured in Jenkins
                    tools {
                        nodejs "nodeJS"
                    }

                    // Install dependencies
                    sh 'npm install'
                    echo "Installed"
                }
            }
        }
    }
}
