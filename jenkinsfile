pipeline {
    agent any

    stages {
        stage('Cloning Git') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    nodejs('nodejs') {
                        sh 'npm --version'
                        sh 'npm install'
                        echo "Modules installed"
                    }
                }
            }
        }
}
        stage('Build') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/hrms-automation/hrms') {
                        // Ensure NVM is sourced
                        sh '''
                            export NVM_DIR="${HOME}/.nvm"
                            [ -s "${NVM_DIR}/nvm.sh" ] && . "${NVM_DIR}/nvm.sh"
                        '''

                        // Use Node.js v18.13.0
                        sh 'nvm use 18.13.0'

                        // Run the build command
                        sh 'npm run build'
                        echo "Build completed"
                    }
                }
            }
        }

        stage('Package Build') {
            steps {
                script {
                    sh "tar -zcvf bundle.tar.gz dist/template/"
                }
            }
        }
}
        
