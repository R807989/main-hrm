pipeline {
    agent any

    stages {
        stage('Cloning Git') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    nodejs('nodejs') {
                        sh 'npm --version'
                        sh 'npm install'
                        echo "Modules installed"
                    }
                }
            }
        }

       stage('Build') {
    steps {
        script {
            dir('/var/lib/jenkins/workspace/hrms-automation/hrms') {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh 'npm run build'
                    echo "Build completed"
                }
            }
        }
    }
}

  stage('Package Build') {
        sh "tar -zcvf bundle.tar.gz dist/template/"
    }
        

        }
}
