pipeline {
    agent any

    tools {
        nodejs "nodejs" // Use the Node.js tool configured in Jenkins
    }

    stages {
        stage('Cloning Git') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm --version'
                    sh 'npm install'
                    echo "Modules installed"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/hrms-automation/hrms') {
                        sh 'npm run build'
                        echo "Build completed"
                    }
                }
            }
        }

        stage('Package Build') {
            steps {
                script {
                     sh "tar -zcvf bundle.tar.gz dist/template/"
                }
            }
        }
    }
}
