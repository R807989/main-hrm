pipeline {
    agent any

    stages {
        stage('Cloning Git') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    nodejs('nodejs') {
                        sh 'npm --version'
                        sh 'npm install'
                        echo "Modules installed"
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/hrms-automation/hrms') {
                        "npm run build'
                    }
                }
            }
        }

        stage('Package Build') {
            steps {
                script {
                    // Your package build steps here
                }
            }
        }

        }
}
