pipeline {
agent any 
stages{

stage("git intigration") {
steps {
 git 'https://github.com/R807989/main-hrm.git'

}

}



stage('Build') {
            steps {
 dir('hrms') {
                script {
                    // Install dependencies and build AngularJS project
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
}


stage('Build Docker Image') {
            steps {
                dir('hrms') {
                    script {
                        def dockerImage = docker.build('ravi', '-f Dockerfile .')
                        
                    }
                }
            }
        }



}


}



