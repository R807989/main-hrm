
pipeline {
    agent any


    stages {
        stage('Checkout') {
            steps {
            git 'https://github.com/R807989/main-hrm.git'
            }
 



}

stage('Build') {
            steps {
 dir('hrms') {
                script {
                    // Install dependencies and build AngularJS project
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
}

stage('Build Docker Image') {
    steps {
        script {
            // Build Docker image for AngularJS app
            dir('hrms') {
                // Set the desired Docker image name
                def dockerImageName = 'hrms-main'

                // Build the Docker image
                def dockerImage = docker.build(dockerImageName, '-f Dockerfile .')

                
            
            }
        }
    }
}





stage("deploy") {
    steps {
        script {
            // Run Docker container for deployment
            docker.image('hrms-main').run('-d -p 8081:9876', 'hr-cont')
        }
    }
}



}

}
